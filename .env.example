# Tagger Application Configuration
# Copy this file to .env and modify the values as needed for your environment

# ======================
# DATABASE CONFIGURATION  
# ======================
# PostgreSQL database configuration
POSTGRES_DB=tagger_db
POSTGRES_USER=tagger_user
POSTGRES_PASSWORD=tagger_password
DATABASE_URL=postgres://tagger_user:tagger_password@postgres:5432/tagger_db

# ======================
# BACKEND CONFIGURATION
# ======================
# Backend service configuration
DEBUG=false
LOG_LEVEL=info

# JWT Authentication configuration
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_EXPIRE_MINUTES=30

# CORS origins (comma-separated list of allowed frontend URLs)
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://localhost:5173

# ======================
# FRONTEND CONFIGURATION
# ======================
# Frontend service configuration
VITE_API_BASE_URL=http://localhost:8000/api/v1

# ======================
# MAPSERVER CONFIGURATION
# ======================
# MapServer service configuration
MAPSERVER_URL=http://mapserver
MAPSERVER_SHARED_DIR=/opt/shared/mapserver

# ======================
# PRODUCTION EXAMPLES
# ======================
# Uncomment and modify these for production deployments:

# Production Database (external PostgreSQL)
# DATABASE_URL=postgres://username:password@your-production-db:5432/database
# POSTGRES_DB=production_tagger_db
# POSTGRES_USER=production_user
# POSTGRES_PASSWORD=your_strong_password_here

# Production Backend
# DEBUG=false
# LOG_LEVEL=warning
# JWT_SECRET_KEY=your-very-strong-secret-key-for-production
# JWT_EXPIRE_MINUTES=60

# Production CORS (your actual domain)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Production Frontend
# VITE_API_BASE_URL=https://api.yourdomain.com/api/v1

# Production MapServer
# MAPSERVER_URL=https://mapserver.yourdomain.com
# MAPSERVER_SHARED_DIR=/opt/shared/mapserver
